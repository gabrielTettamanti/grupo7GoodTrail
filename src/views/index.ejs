<!-- HEAD -->
<%- include('./partials/head')%>

    <link href="/css/index.css" rel="stylesheet">
    <title>GoodTrail | Home</title>
</head>
<body>

    <!-- HEADER -->
    <%- include('./partials/header')%>

    <%- include('./partials/imageCarousel', {experiences: experiences})%> 

    <main class="index-main">
        <section class="home-buttons">
            <button>Buenos Aires</button>
            <button>Por el mundo</button>
        </section>

        <section class="product-home-container">


            <% experiences.forEach(experience => { %>
                <a href="/product/productDescription/<%= experience.id %> " class="product">
                    <img src="/img/cardImages/<%= experience.images[0].url %>" alt=<%= experience.nombre %>>
                    <h4> <%= experience.name %> </h4>
                    <p> <%= experience.description.slice(0,experience.description.indexOf('.')); %> </p>
        
                    <div class="price-stars">
                        <p class="price"> <%= experience.currency %><%= new Intl.NumberFormat('de-DE').format(experience.price) %> </p>
                        <p class="star"><i class="fa-solid fa-star"><%= experience.rating.dataValues.value %></i></p>
                    </div>
                </a> 
            <% }) %>

        </section>

        <section class="load-more-button">
            <button>Ver m√°s</button>
        </section>
        
    </main>

    <!-- FOOTER -->
    <%- include('./partials/footer')%>

    <script async src="/js/carousel.js"></script>

</body>
</html>