    <!-- HEAD -->
    <%- include('./partials/head')%>

    <link href="/css/productDescription.css" rel="stylesheet">
    <title>GoodTrail | Experiencia</title>
</head>
<body>

    <!-- HEADER -->
    <%- include('./partials/header')%>

    <%- include('partials/imageCarousel', {experiences: experienceDetail}) %> 

    <main>
        <section class="mobile-title">
            <h1 class="main-title"> <%= experienceDetail.name %> </h1>
        </section>

        <section class="container experience-options">
            <div class="experience-title">
                <h1 class="main-title"> <%= experienceDetail.name %> </h1>
                <div class="experience-rating">

                    <% for( let index = 0; index < experienceDetail.rating; index++ ) { %>
                        <i class="fa-solid fa-star"></i>
                    <% } %>

                </div>
            </div>
            <button class="buy-button">
                Comprar
            </button>
            <div class="experience-button">
                <i class="fa-solid fa-cart-plus"></i>
                <i class="fa-solid fa-heart"></i>
            </div>
            
        </section>
        <section class="container">
            <div class="column">
                <h2 class="info-header">Precio</h2>
                <h3 class="info-context"> <%= experienceDetail.currency %><%= new Intl.NumberFormat('de-DE').format(experienceDetail.price) %> </h3>
            </div>
            <div class="column">
                <h2 class="info-header">Personas</h2>
                <h3 class="info-context"> <%= experienceDetail.peopleQuantity %>  </h3>
            </div>
            <div class="column">
                <h2 class="info-header">Ubicación</h2>
                <h3 class="info-context"> <%= experienceDetail.ubication %>  </h3>
            </div>
            
            <% if (experienceDetail.days > 0) { %>
                <div class="column">
                    <h2 class="info-header">Días</h2>
                    <h3 class="info-context"> <%= experienceDetail.duration %> </h3>
                </div>
            <% } %>

        </section>
        <section class="container">
            <h2 class="section-title">Descripción</h2>
            <div class="description-text">
                <p> <%= experienceDetail.description %></p>    
            </div>
        </section>
        <section class="mobile-buttons">
            <button class="buy-button">
                Comprar
            </button>
            <div class="experience-button">
                <i class="fa-solid fa-cart-plus"></i>
            </div>
            <div class="experience-button">
                <i class="fa-solid fa-heart"></i>
            </div>
        </section>
        <section class="container map-container">
            <h2 class="section-title">Mapa</h2>
            <iframe class="map" src= <%= experienceDetail.map %>  style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </section>
    </main>

    <!-- FOOTER -->
    <%- include('./partials/footer')%>

</body>
</html>