<header>
    <div class="cont1">
        <div class="mobile-menu">
            <i class="fa-solid fa-bars"></i>
        </div>
        <div class="logo-container">
            <a href="/"><img class="logo" src="/img/logo.png" alt="logo"></a>
        </div>
        <form class="search-container" action="/search" method="GET">
            <input type="text" class="buscador" placeholder="Busca tu mejor experiencia" name="search">
            <i class="fa-solid fa-magnifying-glass"></i> 
        </form>
    </div>
    <div class="cont2">

        <nav class="categorias">
                <a href="/product/creation"><i class="fa-solid fa-plus" id="plusHeader"></i></a>             
                <a href="/experienceCatalog">
                    <i class="fa-solid fa-angle-down"></i>
                    <i class="fa-solid fa-hotel"></i>
                    <i class="fa-solid fa-kitchen-set"></i>
                    <i class="fa-solid fa-person-skiing"></i>
                    <i class="fa-solid fa-landmark"></i>
                    <i class="fa-solid fa-plane-departure"></i>
                </a>
        </nav>

        <div class="bottom-header-right">
            <% if (user != undefined) { %>
                <a href="/user/profile" class="usuario">
                    <i class="fa-solid fa-user"></i>
                    <p><%= user.first_name + ' ' + user.last_name %> </p>
                    <i class="fa-solid fa-arrow-down"></i>
                </a>
            <% } else { %>
                <a href="/user/login" class="usuario">
                    <p>Iniciar sesi√≥n</p>
                </a>
            <% } %>     
            <a href="/user/buyCart"><i class="fa-solid fa-cart-shopping"></i></a>
        </div>

    </div>
</header>