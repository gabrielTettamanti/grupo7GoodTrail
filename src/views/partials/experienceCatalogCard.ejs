<a href="/product/productDescription/<%= experience.id %> " class="experience-card">
    <img src="/img/cardImages/<%= experience.images[0].url %> " alt="">
    <div class="rating-container">
        <% for( let index = 0; index < experience.rating.dataValues.value; index++ ) { %>
            <i class="fa-solid fa-star"></i>
        <% } %>
    </div>
    <div class="experience-description">
        <h3 class="experience-title"> <%= experience.name %> </h3>
        <p class="experience-about"> <%= experience.description.slice(0,experience.description.indexOf('.')); %> </p>
        <h3 class="experience-price"> <%= experience.currency %><%= new Intl.NumberFormat('de-DE').format(experience.price) %> </h3>
    </div>
</a>