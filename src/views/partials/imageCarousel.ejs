<div class="image-carousel">
    
    <% if (experiences.length > 1) { %>
        <% experiences.forEach(experience => { %>
            <div class="slide">
                <img src="/img/cardImages/<%= experience.image %> " alt="">
            </div>     
        <% }) %>     
    <% } else { %>
        <div class="slide">
            <img src="/img/cardImages/<%= experiences.image %> " alt="">
        </div>
    <% } %> 

    <div class="back carousel-button" id="back-button">
        <i class="fa-solid fa-angle-left"></i>
    </div>
    <div class="forward carousel-button" id="forward-button">
        <i class="fa-solid fa-angle-right"></i>
    </div>
</div>