<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="/css/normalize.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/experienceCatalog.css" rel="stylesheet">
</head>
<body>

    <!-- HEADER -->
    <%- include('./partials/header')%>

    <main>

    <form action="" class="filter-form">
        <h2 class="filter-title">Filtrar</h2>
        <div class="filter-container superior-filter">
            <h3>Categorías</h3>
            <div class="option-container">
                <div class="option">
                    <label class="label-container">
                        Viajes
                        <input type="radio" value="category" name="category">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        Hotelería
                        <input type="radio" value="category" name="category">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        Gourmet
                        <input type="radio" value="category" name="category">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        Deportes
                        <input type="radio" value="category" name="category">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        Cultura
                        <input type="radio" value="category" name="category">
                        <span class="radio-button"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="filter-container superior-filter">
            <h3>Nro de personas</h3>
            <div class="option-container">
                <div class="option">
                    <label class="label-container">
                        1 Persona
                        <input type="radio" value="quantity" name="quantity">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        2 Personas
                        <input type="radio" value="quantity" name="quantity">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        Más de 2 Personas
                        <input type="radio" value="quantity" name="quantity">
                        <span class="radio-button"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="filter-container">
            <h3>Destino</h3>
            <div class="option-container">
                <div class="option">
                    <label class="label-container">
                        Buenos Aires
                        <input type="radio" value="destination" name="destination">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        Argentina
                        <input type="radio" value="destination" name="destination">
                        <span class="radio-button"></span>
                    </label>
                </div>
                <div class="option">
                    <label class="label-container">
                        Por el Mundo
                        <input type="radio" value="destination" name="destination">
                        <span class="radio-button"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="filter-container price-container">
            <h3>Precio</h3>
            <div class="option-container field-container">
                <input type="number" placeholder="Mínimo" class="option-field" min="0">
                <input type="number" placeholder="Maximo" class="option-field" min="0">
            </div>
        </div>
        <div class="search-button-container">
            <button class="search-button">Buscar</button>
        </div>
    </form>

    <section class="experience-section">

        <% experiences.forEach(experience => { %>
            
            <%- include('./partials/experienceCatalogCard', {experience: experience}) %> 

        <% }) %>

        <div class="button-container">
            <button>Ver más</button>
        </div>
    </section>

    <section class="page-buttons">
        <div class="buttons-container">
                <button class="move page-button" disabled="disabled"><i class="fa-solid fa-angle-left"></i></button>
                <button class="number page-button">1</button>
                <button class="number page-button">2</button>
                <button class="number page-button">3</button>
                <button class="number page-button">4</button>
                <button class="number page-button">5</button>
                <button class="move page-button"><i class="fa-solid fa-angle-right"></i></button>
        </div>
    </section>

    </main>
    
    <footer>
        <div class="cont1-footer">
            <section class="experiencias">
                <h3>Experiencias</h3>
                <ul>
                    <li><a href="/experienceCatalog">Hoteleria</a></li>
                    <li><a href="/experienceCatalog">Gourmet</a></li>                   
                    <li><a href="/experienceCatalog">Deportes</a></li>                      
                    <li><a href="/experienceCatalog">Cultura</a></li>  
                    <li><a href="/experienceCatalog">Viajes</a></li>
                </ul>
            </section>
            <section class="metodosDePago">
                <h3>Metodos de pago</h3>
                <h4>Pagar con tarjeta de credito o debito</h4>
                <i class="fa-solid fa-credit-card"></i>
                <h4>Pago en efectivo</h4>
                <i class="fa-solid fa-money-bills"></i>
            </section>
            <section class="contactanos">
                <h3>Contactanos</h3>
                <h4>Informacion de contacto</h4>
                <i class="fa-brands fa-whatsapp"></i>
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-instagram"></i>
            </section>
        </div>
    </footer>
    
</body>
</html>